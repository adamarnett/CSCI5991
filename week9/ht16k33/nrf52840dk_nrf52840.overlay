

&i2c0 {
	status = "okay";
	
	quadalpha@70 {
		status = "okay";
		compatible = "sparkfun,quadalpha";
		reg = <0x70>;
		columns = <4>;
		rows = <1>;
		command-delay-ms = <10>;
		special-command-delay-ms = <50>;
	  };
};

&i2c1 {
	status = "okay";
	
    serlcd@72 {
		status = "okay";
		compatible = "sparkfun,serlcd";
		reg = <0x72>;
		columns = <16>;
		rows = <2>;
		command-delay-ms = <10>;
		special-command-delay-ms = <50>;
	  };
  };
